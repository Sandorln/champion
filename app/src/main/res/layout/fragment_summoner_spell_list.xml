<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sandorln.champion.view.custom.VersionImage
            android:id="@+id/img_summoner_spell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_large"
            app:layout_constraintBottom_toTopOf="@id/tv_name"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.3" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/Base.Widget.AppCompat.TextView.TitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:paddingStart="@dimen/padding_large"
            android:paddingEnd="@dimen/padding_large"
            android:textColor="@color/base"
            app:layout_constraintBottom_toTopOf="@id/tv_cool_down"
            app:layout_constraintTop_toBottomOf="@id/img_summoner_spell" />

        <TextView
            android:id="@+id/tv_cool_down"
            style="@style/Base.Widget.AppCompat.TextView.TipStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/padding_large"
            android:paddingEnd="@dimen/padding_large"
            android:text=""
            android:textColor="@color/base"
            app:layout_constraintBottom_toTopOf="@id/tv_description"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/Base.Widget.AppCompat.TextView.TipStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:gravity="center_horizontal|top"
            android:paddingStart="@dimen/padding_large"
            android:paddingEnd="@dimen/padding_large"
            app:layout_constraintBottom_toTopOf="@id/horizon_summoner_spell"
            app:layout_constraintTop_toBottomOf="@id/tv_cool_down" />

        <com.sandorln.champion.view.custom.HorizonItemThumbnailList
            android:id="@+id/horizon_summoner_spell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:itemListTitleName="소환사 주문"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>