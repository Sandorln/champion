<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.AppCompat.TextView.DescriptionStyle" parent="shadowEffect">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_middle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12.5dp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.SkillStyle" parent="shadowEffect">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_xsmall</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.TipStyle" parent="Base.Widget.AppCompat.TextView.DescriptionStyle">
        <item name="android:gravity">start</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.TitleStyle" parent="Base.Widget.AppCompat.TextView.DescriptionStyle">
        <item name="android:padding">@dimen/padding_xsmall</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>